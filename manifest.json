{
  "manifest_version": 3,
  "name": "Brostagma Analiz Trendyol Eklentisi",
  "version": "3.6.2",
  "description": "XLSX hedef liste ile kampanya eşleşmeleri.",
  "permissions": ["storage"],
  "host_permissions": ["*://*.trendyol.com/*"],

  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png",
    "256": "icons/icon256.png"
  },

  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Brostagma Analiz Trendyol Eklentisi"
  },

  "content_scripts": [{
    "matches": ["*://*.trendyol.com/*"],
    "run_at": "document_idle",
    "js": [
      "vendor/xlsx.full.min.js",
      "vendor/FileSaver.min.js",
      "content.js"
    ]
  }]
}
