{
  "manifest_version": 3,
  "name": "Trendyol Kampanya Tarayıcı — Emin Pro",
  "version": "3.9.5",
  "description": "XLSX hedef liste ile esnek eşleşme. İkinci tarama + Şüpheli ayıklama + DC kapısı.",
  "permissions": [],
  "host_permissions": ["https://*.trendyol.com/*"],
  "content_scripts": [
    {
      "matches": ["https://*.trendyol.com/*"],
      "run_at": "document_idle",
      "css": ["content/styles.css"],
      "js": [
        "vendor/gm-polyfill.js",
        "vendor/xlsx.full.min.js",
        "vendor/FileSaver.min.js",

        "content/core/cfg.js",
        "content/core/state.js",
        "content/core/util.js",
        "content/core/lexicon.js",
        "content/core/autofilter.js",
        "content/core/match.js",
        "content/core/catalog.js",

        "content/engine/observers.js",
        "content/engine/scan.js",
        "content/engine/deepCampaign.js",

        "content/ui/panel.js",

        "content/flows/quickScan.js",
        "content/flows/targets.js",
        "content/export/xlsx.js",

        "content/app.js",
        "content/boot.js"
      ]
    }
  ]
}
